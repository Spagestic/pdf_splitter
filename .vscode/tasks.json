{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run FastAPI Server",
      "type": "shell",
      "command": "python -m uvicorn src.main:app --reload",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$python"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
